---
interface Props {
	title: string;
	description: string;
	image?: string;
	type?: 'website' | 'article';
	date?: string;
	tags?: string[];
	url?: string;
	author?: string;
	siteName?: string;
	robots?: 'index,follow' | 'noindex,nofollow' | 'index,nofollow' | 'noindex,follow';
}

const {
	title,
	description,
	image,
	type = 'website',
	date,
	tags = [],
	url,
	author = 'Carlos Quinzá',
	siteName = 'Carlos Quinzá - Portfolio Personal',
	robots = 'index,follow'
} = Astro.props;

// URL base del sitio
const siteUrl = Astro.site?.href || 'https://www.carlosquinza.es';
const baseUrl = siteUrl.replace(/\/$/, ''); // Remove trailing slash
const currentUrl = url ? `${baseUrl}${url}` : baseUrl;

// Imagen por defecto si no se proporciona
const defaultImage = `${baseUrl}/images/personal_images/personal.webp`;
// Convert relative image paths to absolute URLs for social media
const ogImage = image
  ? (image.startsWith('http') ? image : `${baseUrl}${image}`)
  : defaultImage;

// Generar keywords desde tags
const keywords = tags.length > 0 ? tags.join(', ') : 'desarrollo web, frontend, backend, javascript, typescript, react, astro, portfolio';

// Formatear fecha para ISO
const formattedDate = date ? new Date(date).toISOString() : '';
---

<!-- Metaetiquetas básicas -->
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="robots" content={robots} />
<meta name="language" content="es" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:alt" content={title} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="es_ES" />

{date && <meta property="article:published_time" content={formattedDate} />}
{tags.length > 0 && tags.map(tag => <meta property="article:tag" content={tag} />)}
{type === 'article' && <meta property="article:author" content={author} />}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={currentUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:image:alt" content={title} />

<!-- Meta adicionales para SEO -->
<meta name="theme-color" content="#4f46e5" />
<meta name="msapplication-TileColor" content="#4f46e5" />

<!-- Canonical URL -->
<link rel="canonical" href={currentUrl} />

<!-- Alternate language -->
<link rel="alternate" hreflang="es" href={currentUrl} />
<link rel="alternate" hreflang="x-default" href={currentUrl} />