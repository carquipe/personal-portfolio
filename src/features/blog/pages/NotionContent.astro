---
import "@notion-render/client/dist/theme.css";
import { markdownToHtml } from "@notion/converters/NotionMarkdownHtml";

interface Props {
  content: string;
}

const { content } = Astro.props;

const processedContent = await markdownToHtml(content);

---

<div class="notion-content prose prose-lg max-w-none">
  <Fragment set:html={processedContent} />
</div>

<style is:global>
  .notion-content {
    color: #4b5563; /* gray-600 */
    line-height: 1.75;
  }

  .notion-content h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #111827; /* gray-900 */
    margin: 2rem 0 1rem;
  }

  .notion-content h2 {
    font-size: 1.875rem;
    font-weight: 600;
    color: #111827; /* gray-900 */
    margin: 1.75rem 0 0.75rem;
  }

  .notion-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #111827; /* gray-900 */
    margin: 1.5rem 0 0.75rem;
  }

  .notion-content p {
    margin: 1.25rem 0;
  }

  .notion-content ul, .notion-content ol {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
  }

  .notion-content ul {
    list-style-type: disc;
  }

  .notion-content ol {
    list-style-type: decimal;
  }

  .notion-content li {
    margin: 0.5rem 0;
  }

  .notion-content a {
    color: #4f46e5; /* indigo-600 */
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .notion-content a:hover {
    color: #4338ca; /* indigo-700 */
  }

  .notion-content blockquote {
    border-left: 4px solid #d1d5db; /* gray-300 */
    padding-left: 1rem;
    margin: 1.25rem 0;
    color: #6b7280; /* gray-500 */
    font-style: italic;
  }

  .notion-content pre {
    background-color: #1f2937; /* gray-800 */
    color: #f3f4f6; /* gray-100 */
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.25rem 0;
  }

  .notion-content code {
    background-color: #f3f4f6; /* gray-100 */
    color: #111827; /* gray-900 */
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .notion-content pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
    border-radius: 0;
  }

  .notion-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }

  .notion-content hr {
    border: 0;
    border-top: 1px solid #e5e7eb; /* gray-200 */
    margin: 2rem 0;
  }

  .notion-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.25rem 0;
  }

  .notion-content th, .notion-content td {
    border: 1px solid #e5e7eb; /* gray-200 */
    padding: 0.75rem;
    text-align: left;
  }

  .notion-content th {
    background-color: #f9fafb; /* gray-50 */
    font-weight: 600;
  }

  /* Estilos para callouts */
  .notion-content .callout {
    display: block;
    background-color: #eff6ff;
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin: 1.25rem 0;
    line-height: 1.6;
  }

  .notion-content .callout p {
    margin: 0 0 1rem 0;
    white-space: pre-line;
  }

  .notion-content .callout p:last-child {
    margin-bottom: 0;
  }

  .notion-content .callout br {
    display: block;
    content: "";
    margin: 0.5rem 0;
  }

  /* Estilo específico para el contenedor del icono del callout */
  .notion-content .callout div[style*="display: flex"] {
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  /* Ajuste para el emoji del callout */
  .notion-content .callout div[style*="display: flex"] span {
    flex-shrink: 0;
    font-size: 1.25rem;
  }

  /* Asegurarse de que el contenido del callout tenga el espaciado correcto */
  .notion-content .callout > div:not([style*="display: flex"]) {
    white-space: pre-line;
  }

  /* Estilos para listas anidadas */
  .notion-content ul ul, .notion-content ol ol {
    margin: 0.5rem 0;
  }

  /* Estilos para enlaces dentro de bloques de código */
  .notion-content pre a {
    color: #93c5fd;
    text-decoration: none;
  }

  .notion-content pre a:hover {
    text-decoration: underline;
  }

  .notion-external-block {
    margin: 1rem 0;
    padding: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
  }

  .notion-external-block a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #4f46e5;
    text-decoration: none;
  }

  .notion-external-block a:hover {
    text-decoration: underline;
  }

  .notion-embed {
    margin: 1rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .notion-embed iframe {
    width: 100%;
    min-height: 500px;
    border: none;
  }

  .notion-video {
    margin: 1rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .notion-video video {
    width: 100%;
  }

  .notion-file {
    margin: 1rem 0;
  }
</style>
