  },
  {
    date: "2024",
    title: "Angular de 0 a Experto",
    tag: "DevTales",
    link: "https://www.udemy.com/course/angular-fernando-herrera/",
  },
  {
    date: "2021",
    title: "Principios SOLID",
    tag: "Codely",
    link: "https://codely.com/en/courses/applied-solid-principles-ahbk",
  },
  {
    date: "2021",
    title: "Arquitectura Hexagonal",
    tag: "Codely",
    link: "https://codely.com/en/courses/hexagonal-architecture-t5m4",
  },
  {
    date: "2018",
    title: "Scrum Master",
